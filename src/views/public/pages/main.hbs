<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Spacenet - Register</title>
    <link rel='shortcut icon' href='./img/icons/favicon.ico' type='image/x-icon' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Montserrat:wght@300;400;600&display=swap'
      rel='stylesheet'
    />
    <link rel='stylesheet' href='../css/bootstrap-reboot.min.css' />
    <link rel='stylesheet' href='../css/index.min.css' />
  </head>
  <body>
    <header class='header'>
      <div class='header__logo'>
        <a href='/'><img src='../img/logo.svg' alt='spacenet_logo' /></a>
      </div>

      <div class='header__logout'>
        <a href='/logout'><img src='../img/icons/logout.png' alt='logout' /></a>
      </div>
    </header>

    <section class='main-blocks'>
      <div class='main-blocks__block'>
        <div class='main-blocks__header'>My account</div>
        <div class='main-blocks__photo'>
          <div class='main-blocks__photo-img'>
            <img class='main-blocks__img' data-avatar='{{avatar}}' src='{{avatar}}' alt='user' />
          </div>

          <form class='main-blocks__download-form'>
            <label class='main-blocks__download-label' for='download-input'>
              <img src='../img/icons/plus-circle.svg' alt='plus' /></label>
            <input class='main-blocks__download-input' id='download-input' type='file' />
          </form></div>
        <div class='main-blocks__username' data-id='{{id}}'><a href='/profile/{{id}}'>{{userName}}</a></div>
        <form class='credential-form' action='#'>
          <label class='setting-lbl' for='name'>name <span class='credential-form-name'></span></label>
          <input name='username' class='setting credential-userName' id='name' type='text' value='{{userName}}' />
          <label class='setting-lbl' for='age'>age <span class='credential-form-age'></span></label>
          <input name='age' class='setting' id='age' type='text' value='{{age}}' />
          <label class='setting-lbl' for='about'>about <span class='credential-form-about'></span></label>
          <input name='about' class='setting' id='about' type='text' value='{{about}}' />
          <button class='btn btn_submit btn_submit_profile'>save changes</button>
        </form>
      </div>

      <div class='main-blocks__block'>
        <div class='main-blocks__header'>Users</div>
        <div class='main-blocks__userlist'>
        </div>
        <button class='btn btn_submit btn_submit_users'>Get userlist</button>
      </div>

      <div class='main-blocks__block'>
        <div class='main-blocks__header'>Live Chat</div>
        <div class='main-blocks__chatlist'>
        </div>
        <form class='main-blocks__chatform'>
          <input class='main-blocks__chatinput' type='text' />
          <button type='submit'></button>
        </form>
      </div>
    </section>

    <footer class='footer'>
      <div class='copyright'>2022 Planet Earth</div>
    </footer>

    <script src='/socket.io/socket.io.js'></script>
    <script src='../js/main.js'></script>
    <script src='../js/chat.js'></script>
  </body>
</html>